<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_height="wrap_content"
              android:gravity="left|center"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:paddingBottom="5px"
              android:paddingTop="5px"
              android:paddingLeft="5px">
    <TextView
            android:id="@+id/description"
            android:textSize = "12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/sport"
            android:text="This is a test description"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/sport"
                android:layout_width="32dip"
                android:layout_height="32dip"
                android:layout_marginRight="6dip"
                android:layout="@+id/description"
                android:src="@drawable/question" />
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView android:id="@+id/entry1"
                      android:textSize = "12sp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:text="This is a sample from the entry 1"/>
            <TextView android:id="@+id/entry2"
                      android:textSize = "12sp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:text="This is a sample from the entry 2"
                    />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>